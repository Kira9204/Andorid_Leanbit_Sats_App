<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffff2100"
        tools:context=".MainActivity"
        android:id="@+id/firstSection"
        android:orientation="vertical"
       >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="#ffffba00">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ff7bb0a5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_column="0">
                    <LinearLayout
                        android:orientation="horizontal"

                        android:background="#ff7ab04f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        >

                        <TextView
                            android:layout_width="40dp"
                            android:id="@+id/date_img"
                            android:background="#ff000000"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"/>

                        <TextView
                            android:layout_width="40dp"
                            android:id="@+id/date_img2"
                            android:background="#ff000000"
                            android:layout_margin="2dp"
                            android:layout_height="40dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ic_calender"
                            android:layout_height="10dp"
                            android:layout_width="10dp"
                            android:src="@drawable/ic_time"
                            android:layout_x="10dp"
                            android:layout_y="22dp"
                            android:layout_margin="2dp"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="30 min"
                            android:id="@+id/activity_duration"
                            android:layout_height="wrap_content"/>
                        </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2" android:background="#ff0080b0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Sats core"
                        android:id="@+id/activity_name"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Hornstull"
                        android:id="@+id/activity_place"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Sven Svensson"
                        android:id="@+id/activity_instructor"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2" android:background="#ff5705b0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="2">>
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="75dp"
                        android:layout_height="28dp"
                        android:text="Detaljer"
                        android:id="@+id/detaljer"
                        android:layout_x="275dp"
                        android:layout_y="5dp"
                        android:textSize="12dp"
                        android:background="@drawable/progressbar_nmi_primary"
                        android:clickable="true"
                        android:textColor="#ffffffff"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:longClickable="false"
                        android:layout_gravity="right"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="2" android:background="#ff570500"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_queue"
                            android:id="@+id/imageView"
                            android:layout_gravity="right"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:id="@+id/activity_que"/>
                    </LinearLayout>
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="3"
        android:background="#ff59ff00">

        <TableLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1" android:background="#ffb00070"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="0">
                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_calender"
                        android:layout_x="47dp"
                        android:layout_y="52dp"
                        android:id="@+id/img_kalender" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1" android:background="#ffb00010"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="1">
                </LinearLayout>

            </TableRow>

        </TableLayout>



    </LinearLayout>

</LinearLayout>
