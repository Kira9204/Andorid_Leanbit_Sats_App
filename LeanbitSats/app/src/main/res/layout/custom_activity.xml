<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/custom_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fcfefd"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stickylist_horizontal_padding"
        android:layout_marginLeft="@dimen/stickylist_horizontal_padding"
        android:layout_marginRight="@dimen/stickylist_vertical_padding"
        android:layout_marginTop="@dimen/stickylist_horizontal_padding"
        android:elevation="2dp"
        android:background="@drawable/shape">

        <TextView
            android:id="@+id/custom_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="Styrketräning"
            android:textColor="@color/primary_color"
            android:textSize="16dp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/custom_activity_duration_image"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/custom_activity_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_time"/>

        <TextView
            android:id="@+id/custom_activity_duration_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/custom_activity_comment_text"
            android:layout_alignStart="@+id/custom_activity_comment_text"
            android:layout_alignTop="@+id/custom_activity_duration_image"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="50 min"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_color"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/custom_activity_comment_image"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/custom_activity_duration_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_comment"/>

        <TextView
            android:id="@+id/custom_activity_comment_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/custom_activity_comment_image"
            android:layout_gravity="right"
            android:layout_toEndOf="@+id/custom_activity_comment_image"
            android:layout_toRightOf="@+id/custom_activity_comment_image"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="1  kommentar"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_color"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/custom_activity_button_details"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/progressbar_nmi_primary"
            android:text="Detaljer"
            android:textColor="@color/white"
            android:textSize="12dp"/>


        <View
            android:id="@+id/custom_activity_lower_separator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/custom_activity_comment_image"
            android:layout_marginTop="10dp"
            android:background="@color/third_color"/>


        <ImageView
            android:id="@+id/custom_activity_calendar_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/custom_activity_lower_separator"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusable="false"
            android:padding="5dp"
            android:src="@drawable/ic_calender"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/custom_activity_calendar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_activity_lower_separator"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/custom_activity_calendar_image"
            android:layout_toRightOf="@+id/custom_activity_calendar_image"
            android:text="Lägg till i kalendern"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_color"
            android:textSize="12dp"/>


        <View
            android:id="@+id/custom_activity_lower_separator2"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/custom_activity_lower_separator"
            android:layout_centerHorizontal="true"
            android:background="@color/third_color"/>


        <ImageView
            android:id="@+id/custom_activity_workout_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_activity_lower_separator"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/custom_activity_lower_separator2"
            android:layout_toRightOf="@+id/custom_activity_lower_separator2"
            android:padding="5dp"
            android:src="@drawable/ic_more"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/custom_activity_workout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/custom_activity_lower_separator"
            android:layout_below="@+id/custom_activity_workout_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/custom_activity_workout_image"
            android:layout_toRightOf="@+id/custom_activity_workout_image"
            android:text="Träningsprogram"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_color"
            android:textSize="12dp"/>

    </RelativeLayout>
</LinearLayout>