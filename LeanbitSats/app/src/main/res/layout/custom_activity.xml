<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/custom_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape">

     <TextView
          android:id="@+id/custom_activity_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Styrketräning"
          android:textColor="@color/primary_color"
          android:textSize="16dp"
          android:textStyle="bold"
          android:gravity="top"
          android:layout_marginTop="10dp" android:layout_marginLeft="10dp"/>


          <ImageView
              android:id="@+id/custom_activity_duration_image"
              android:layout_width="25dp"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_time"
              android:layout_below="@+id/custom_activity_name"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_marginTop="4dp" android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/custom_activity_duration_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="50 min"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:textColor="@color/secondary_color"
        android:layout_alignTop="@+id/custom_activity_duration_image"
        android:layout_alignLeft="@+id/custom_activity_comment_text"
        android:layout_alignStart="@+id/custom_activity_comment_text"/>

                <ImageView
                   android:id="@+id/custom_activity_comment_image"
                   android:layout_width="26dp"
                   android:layout_height="16dp"
                   android:src="@drawable/ic_comment"
                   android:layout_below="@+id/custom_activity_duration_image"
                  android:layout_alignParentLeft="false"
                  android:layout_alignParentStart="true" android:layout_marginTop="6dp"
                   android:layout_marginLeft="6dp"/>

                <TextView
                    android:id="@+id/custom_activity_comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:text="1  kommentar"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_color"
                    android:layout_alignTop="@+id/custom_activity_comment_image"
                    android:layout_toRightOf="@+id/custom_activity_comment_image"
                    android:layout_toEndOf="@+id/custom_activity_comment_image"
                    android:paddingLeft="6dp"/>


            <Button
                android:id="@+id/custom_activity_button_details"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/progressbar_nmi_primary"
                android:text="Detaljer"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"/>


                 <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/third_color"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="false"
                    android:layout_below="@+id/custom_activity_comment_image"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                   android:id="@+id/custom_activity_lower_separator" android:layout_marginTop="10dp"/>


                <ImageView
                    android:id="@+id/custom_activity_calendar_image"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:adjustViewBounds="false"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:src="@drawable/ic_calender"
                    android:padding="5dp"
                    android:layout_alignTop="@+id/custom_activity_lower_separator"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/custom_activity_calendar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lägg till i kalendern"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp"
                    android:textColor="@color/secondary_color"
                    android:layout_below="@+id/custom_activity_lower_separator"
                    android:layout_toRightOf="@+id/custom_activity_calendar_image"
                    android:layout_toEndOf="@+id/custom_activity_calendar_image"
                    android:layout_marginTop="10dp" />


            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/third_color"
                android:layout_alignTop="@+id/custom_activity_lower_separator"
                android:layout_centerHorizontal="true"
                android:id="@+id/custom_activity_lower_separator2" />



            <ImageView
                android:id="@+id/custom_activity_workout_image"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/ic_more"
                android:layout_below="@+id/custom_activity_lower_separator"
                android:layout_toRightOf="@+id/custom_activity_lower_separator2"
                android:layout_toEndOf="@+id/custom_activity_lower_separator2"
                android:padding="5dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/custom_activity_workout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Träningsprogram"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12dp"
                android:textColor="@color/secondary_color"
                android:layout_below="@+id/custom_activity_workout_image"
                android:layout_toRightOf="@+id/custom_activity_workout_image"
                android:layout_toEndOf="@+id/custom_activity_workout_image"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/custom_activity_lower_separator"
                android:layout_marginLeft="5dp" />

</RelativeLayout>