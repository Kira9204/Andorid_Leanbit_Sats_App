<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/future_activity_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape">

    <TextView
        android:id="@+id/future_activity_hour_text"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/clock_background"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/future_activity_minute_text"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/clock_background"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/future_activity_hour_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/future_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SATS CORE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_toRightOf="@+id/future_activity_minute_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/future_activity_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Hornstull"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/secondary_color"
        android:textSize="12dp"
        android:typeface="normal"
        android:layout_toRightOf="@+id/future_activity_minute_text"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/future_activity_name"/>

    <TextView
        android:id="@+id/future_activity_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sven Svensson"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/secondary_color"
        android:textSize="12dp"
        android:layout_below="@+id/future_activity_region"
        android:layout_toRightOf="@+id/future_activity_minute_text"
        android:layout_marginLeft="4dp"/>

    <ImageView
        android:id="@+id/future_activity_duration_image"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        android:background="@android:color/transparent"
        android:layout_below="@+id/future_activity_hour_text"
        android:layout_marginTop="4dp" android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/future_activity_duration_text"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="30 min"
        android:textColor="@color/secondary_color"
        android:layout_toRightOf="@+id/future_activity_duration_image"
        android:layout_below="@+id/future_activity_hour_text"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/future_activity_button_cancel"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@drawable/progressbar_nmi_primary"
        android:text="Avboka"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"/>

    <TextView
        android:id="@+id/future_activity_que_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/pink"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/future_activity_button_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="10dp" android:paddingTop="8dp" android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/future_activity_que_image"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_queue"
        android:backgroundTint="@color/white"
        android:background="@android:color/transparent"
        android:layout_below="@+id/future_activity_button_cancel"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_toLeftOf="@+id/future_activity_que_text"
        android:paddingTop="6dp"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/third_color"
        android:layout_below="@+id/future_activity_duration_image"
        android:id="@+id/future_activity_separator" />

    <ImageView
        android:id="@+id/future_activity_calendar_image"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:focusable="false"
        android:src="@drawable/ic_calender"
        android:padding="5dp"
        android:layout_alignTop="@+id/future_activity_separator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/future_activity_calendar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lägg till i kalendern"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:textColor="@color/secondary_color"
        android:layout_below="@+id/future_activity_separator"
        android:layout_toRightOf="@+id/future_activity_calendar_image"
        android:layout_toEndOf="@+id/future_activity_calendar_image"
        android:layout_marginTop="10dp" />


    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/third_color"
        android:layout_alignTop="@+id/future_activity_separator"
        android:layout_centerHorizontal="true"
        android:id="@+id/future_activity_separator2" />



    <ImageView
        android:id="@+id/future_activity_workout_image"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/ic_more"
        android:layout_below="@+id/future_activity_separator"
        android:layout_toRightOf="@+id/future_activity_separator2"
        android:layout_toEndOf="@+id/future_activity_separator2"
        android:padding="5dp"
        android:layout_marginLeft="5dp" android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/future_activity_workout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Träningsprogram"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:textColor="@color/secondary_color"
        android:layout_below="@+id/future_activity_workout_image"
        android:layout_toRightOf="@+id/future_activity_workout_image"
        android:layout_toEndOf="@+id/future_activity_workout_image"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/future_activity_separator"
        android:layout_marginLeft="5dp" />

</RelativeLayout>