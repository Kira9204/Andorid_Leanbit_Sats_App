<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/image_man"
            android:layout_height="40dp"
            android:layout_width="70dp"
            android:src="@drawable/all_training_icons"
            android:layout_x="3dp"
            android:layout_y="7dp">
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/past_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ff444444"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Sats Core"
                android:elegantTextHeight="false"
                android:layout_x="90dp"
                android:layout_y="5dp" />

            <TextView
                android:id="@+id/past_activity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a9444444"
                android:textAlignment="center"
                android:textStyle="bold"

                android:text="Fredag 14/3"

                android:elegantTextHeight="false"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/startTime"
                android:layout_toEndOf="@+id/startTime"
                android:layout_x="90dp"
                android:layout_y="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_commentar"
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:src="@drawable/ic_comment"
                android:layout_x="90dp"
                android:layout_y="50dp"
                android:layout_marginRight="5dp">
            </ImageView>

            <TextView
                android:id="@+id/past_activity_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a9444444"
                android:textAlignment="center"
                android:textStyle="bold"

                android:text="LÃ¤gg till kommentar"

                android:elegantTextHeight="false"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/startTime"
                android:layout_toEndOf="@+id/startTime"
                android:layout_x="106dp"
                android:layout_y="50dp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/image_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/past_activity_completed"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff444444"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"

            android:text="Avklarat!"

            android:elegantTextHeight="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/startTime"
            android:layout_toEndOf="@+id/startTime"
            android:layout_x="90dp"
            android:layout_y="25dp"
            />
    </LinearLayout>
</LinearLayout>